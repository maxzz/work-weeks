{
    "name": "work-weeks",
    "version": "1.25.1",
    "description": "Utility to generate working weeks per year",
    "author": "Max Zakharzhevskiy <maxzz@msn.com>",
    "license": "MIT",
    "engines": {
        "node": ">=10.16.0"
    },
    "keywords": [
        "generate",
        "weeks"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/work-weeks.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/work-weeks/issues"
    },
    "main": "dist/weeks.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "devDependencies": {
        "@types/node": "24.3.1",
        "tsup": "^8.5.0",
        "tsx": "^4.20.5",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "cac": "^6.7.14"
    },
    "scripts": {
        "tsc": "tsc -w",
        "build:env": "tsx scripts/extract-package-fields.ts name version author",
        "build:src": "tsup --entry.weeks src/index.ts --entry.cli src/cli.ts --format cjs --clean",
        "build": "pnpm build:env && pnpm build:src",
        "prepublish": "pnpm build"
    }
}
